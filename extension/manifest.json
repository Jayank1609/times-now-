{
  "manifest_version": 3,
  "name": "NewsVerify Pro - Professional News Analysis",
  "version": "2.0",
  "description": "Comprehensive AI-powered news analysis with industry classification, language detection, country origin, and quantified ML scores. Built for professionals.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs",
    "contextMenus"
  ],
  "host_permissions": [
    "http://localhost:5000/*",
    "http://127.0.0.1:5000/*",
    "<all_urls>"
  ],
  "action": { 
    "default_popup": "popup.html",
    "default_title": "Analyze News with NewsVerify Pro",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": { 
    "service_worker": "background.js" 
  },
  "content_scripts": [
    { 
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["popup.html", "welcome.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
